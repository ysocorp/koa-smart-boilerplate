{
  "name": "my-app",
  "version": "0.1.2",
  "author": "YSO CORP",
  "description": "A RESTful API boilerplate with Koajs 2, @Decorator, Node v8, async-await, babel, and much more...",
  "license": "MIT",
  "engines": {
    "node": ">=8.9.4"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node src/index.js",
    "start": "npm run dev",
    "prod": "node dist/index.js",
    "_rm-build-prod": "rimraf dist",
    "_copy-locals": "cp -rf src/locales dist/",
    "_build-prod": "cross-env NODE_ENV=production babel src --ignore 'locales' --out-dir dist --copy-files",
    "build-prod": "npm run _rm-build-prod && npm run _build-prod && npm run _copy-locals",
    "test": "cross-env NODE_ENV=test mocha --opts mocha.opts",
    "lint": "eslint src config test"
  },
  "dependencies": {
    "koa-smart": "^1.2.0",
    "request": "^2.83.0",
    "request-promise": "^4.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.17.0",
    "cross-env": "^5.1.4",
    "eslint": "^4.11.0",
    "expect": "^22.4.3",
    "mocha": "^5.0.4",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0"
  }
}
